{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine", "node"], // Incluye tipos para Jasmine y Node.js
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node" // Asegura la resolución de módulos compatible con Node.js
  },
  "files": [
    "src/polyfills.ts" // Incluye polyfills
  ],
  "include": [
    "src/**/*.spec.ts", // Incluir archivos de pruebas
    "src/**/*.d.ts"
  ]
}
